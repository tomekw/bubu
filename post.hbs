{{!< default}}

{{#post}}
  <div>
    <h2>{{title}}</h2>
    <small>
      {{date format="DD MMMM YYYY"}}, {{reading_time}}, {{tags prefix="tags: "}}
    </small>
  </div>
  <hr/>
  <div class="text-justify">
    {{content}}
  </div>
